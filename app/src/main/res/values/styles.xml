<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.Title">
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/textTitle</item>
        <item name="android:typeface">sans</item>
    </style>

    <style name="AppTheme.Description">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/textDescription</item>
        <item name="android:typeface">sans</item>
        <item name="android:lineSpacingExtra">6dp</item>
    </style>

</resources>
